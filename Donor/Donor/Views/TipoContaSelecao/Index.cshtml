@model Donor.Models.TipoContaSelecaoViewModel

@{
    ViewBag.Title = "Tipo de Conta";
}

<h2>Tipo de Conta</h2>

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("RedirecionaTipoConta", "TipoContaSelecao", FormMethod.Post, new { @class = "form-horizontal", role = "form" })){
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                @Html.LabelFor(m => m.TipoConta, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.TipoConta, new SelectList(new List<object>{
                        new {value = "U", text = "Usuario"},
                        new {value = "P", text = "Ponto de Doação"}
                    },"value", "text", "U"), new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.TipoConta , "", new { @class = "text-danger" })

                </div>
            </div>            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Criar Perfil" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>
